<h1>Змінити {{data.title}}</h1>

<form action="/mybook/change" method="POST" enctype="multipart/form-data">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
    <label for="title">Назва</label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>

    <div class="input-field">
    <input id="authors" name="authors" type="text" class="validate" required value="{{data.authors}}">
    <label for="authors">Автор</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>
      <div class="input-field">
    <input id="year" name="year" type="text" class="validate" required value="{{data.year}}">
    <label for="year">Рік випуску</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>

  <div class="input-field">
    <input id="desc" name="desc" type="text" class="validate" value="{{data.desc}}">
    <label for="desc">Нотатки</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>

    <div class="file-field input-field">
      <div class="btn">
        <span>File</span>
          <input type="file" name="file">  
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn btn-primary">Змінити</button>
</form>